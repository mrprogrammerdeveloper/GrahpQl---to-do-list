generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://todolist_user:@DevNest344@localhost:5432/todolist?sslmode=disable"
}

model Token {
  refreshToken String
  exp          Int
  status       String
  user         User   @relation(fields: [userId], references: [id])
  userId       String @unique
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  token    Token?
}

model Group {
  id                String @id @default(uuid())
  projectName       String @unique
  groupType         String
  taskNumber        Int
  progressPecantage Int
  iconUrl           String
  task              Task[]
}

model Task {
  id          String  @id @default(uuid())
  name        String
  description String
  startDate   String
  endDate     String
  imageUrl    String
  status      Boolean
  group       Group?  @relation(fields: [taskId], references: [id])
  taskId      String?
}
